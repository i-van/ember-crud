<table class="table table-striped">
    <thead>
    <tr>
        <th>#</th>
        <th>Full Name</th>
        <th>Login</th>
        <th>Email</th>
        <th>Created</th>
        <th>Updated</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {{#each user in model}}
        <tr>
            <td>{{user.id}}</td>
            <td>{{user.fullName}}</td>
            <td>{{user.login}}</td>
            <td>{{user.email}}</td>
            <td>{{user.created}}</td>
            <td>{{user.updated}}</td>
            <td>
                <div class="btn-group btn-group-xs">
                    {{!#link-to 'users' user}}<span class="glyphicon glyphicon-edit"></span>{{!/link-to}}
                    {{!#link-to 'users' user}}<span class="glyphicon glyphicon-remove"></span>{{!/link-to}}
                </div>
            </td>
        </tr>
    {{else}}
        <tr>
            <td colspan="7">No users found</td>
        </tr>
    {{/each}}
    </tbody>
</table>

{{outlet}}